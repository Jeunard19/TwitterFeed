@{
    ViewData["Title"] = "Welcome";

}

@using (Html.BeginForm("Index", "Twitter", FormMethod.Post))
{
    <input type="text" name="ScreenName" id="ScreenName" required/>
    <input type="number" name="NumberTweets" id="NumberTweets" min="1" required/>

    <input type="submit"  value="Welcome" />
    <ul>
        @if (ViewData["NumTimes"] != null & ViewData["ScreenName"] != null)
    {


        for (int i = (int)ViewData["NumTimes"] - 1; i >= 0; i--)
        {
            <li>@ViewData[string.Format("Message{0}", i)]</li>
    }
}
else
{
    <li>Please enter twitter user and number of latest tweets you wish to retrieve.</li>}

    </ul>
}
